@model ClassRoomManager.Models.Activity

<h1>Create</h1>
@Html.ValidationSummary()
<h4>Activity</h4>

<div>
    <form asp-action="CreateActivity">
        <label asp-for="Name"></label>
        <input asp-for="Name"/>
            
        <label asp-for="FinalEvaluationValue"></label>
        <input asp-for="FinalEvaluationValue" type="number" step="0.1"/>
            
        <label asp-for="Type"></label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<ActivityType>()">
            <optgroup label="Tipo de Actividad"></optgroup>
        </select>

        <button type="submit">Crear</button>
    </form>
</div>


<a asp-action="ActivitiesList">Lista de actividades</a>


